{
  "productName": "Betaflight App",
  "version": "2025.12.0",
  "identifier": "com.betaflight.app",
  "build": {
    "beforeDevCommand": "cd .. && yarn dev",
    "beforeBuildCommand": "cd .. && yarn build",
    "devUrl": "http://localhost:8000",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "csp": null,
      "capabilities": [
        "default"
      ]
    },
    "windows": [
      {
        "title": "Betaflight App",
        "width": 1024,
        "height": 550,
        "resizable": true,
        "fullscreen": false
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "appimage", "dmg", "nsis"],
    "icon": ["icons/bf_icon_128.png"]
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
