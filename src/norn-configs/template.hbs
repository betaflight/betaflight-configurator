vtxtable powervalues 25 100 200 400 600
vtxtable powerlabels 250 500 1W 2W 4W
{{/if}}

{{#if (eq failSafe 'Default')}}
# FAILSAFE CONFIGURATION
rxfail 0 s 1500
rxfail 1 s 1500
rxfail 2 s 1500
rxfail 3 h
{{/if}}

{{#if craftName}}
# CRAFT NAME CONFIGURATION
set craft_name = {{craftName}}
{{/if}}

{{#if mbId}}
# MB CONFIGURATION
set mb_id = {{mbId}}
{{/if}}